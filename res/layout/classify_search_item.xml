    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:padding="3dp"
        android:src="@drawable/xlxz_right" />

</RelativeLayout>