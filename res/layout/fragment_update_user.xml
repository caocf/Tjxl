<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="如需修改密码，请验证身份"
        android:padding="10dp"
        android:textSize="@dimen/common_lage_text_size"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_layout_height"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"
            android:gravity="center_vertical|right"
            android:text="请选择验证方式："
            android:textColor="@color/black"
            android:textSize="@dimen/common_big_text_size" />

        <LinearLayout
            android:id="@+id/layout_validate_select"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:background="@drawable/shape_yuanjiao_et_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_validate_type"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.6"
                android:drawableRight="@drawable/arrow_down"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:hint=""
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/common_big_text_size" />
        </LinearLayout>
        <!--<TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/cw"
            android:layout_weight="0.35"
            android:layout_marginLeft="5dp"
            android:text="不能为空"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_big_text_size"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_layout_height"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"
            android:gravity="center_vertical|right"
            android:text="验证码："
            android:textColor="@color/black"
            android:textSize="@dimen/common_big_text_size" />

        <EditText
            android:id="@+id/et_validate_code"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:background="@drawable/shape_yuanjiao_et_bg"
            android:hint=""
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/common_big_text_size" />

        <TextView
            android:id="@+id/btn_validate_code"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.3"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@color/blue_sky"
            android:background="@drawable/shape_yuanjiao_et_bg"/>
    </LinearLayout>


    <TextView
        android:id="@+id/btn_next"
        android:layout_width="100dp"
        android:layout_height="@dimen/common_layout_height"
        android:background="@drawable/common_btn_red_selector"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/common_big_text_size" />

</LinearLayout>
