<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/cgxts"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="重置成功"
        android:textColor="@color/black"
        android:textSize="@dimen/common_lage_text_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_layout_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您好，密码已重置成功，请点击"
            android:textColor="@color/black"
            android:textSize="@dimen/common_lage_text_size" />
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/blue"
            android:textSize="@dimen/common_lage_text_size" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="重新登录，谢谢！"
        android:textColor="@color/black"
        android:textSize="@dimen/common_lage_text_size" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_layout_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/common_btn_red_selector"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/common_big_text_size" />
    </LinearLayout>

</LinearLayout>
