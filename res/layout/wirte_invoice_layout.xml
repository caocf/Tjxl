<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_common_bg"
    android:orientation="vertical" >

    <com.eims.tjxl_andorid.weght.HeadView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/black_text"
        android:text="发票信息【保存发票信息】"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        />
         <LinearLayout 
             
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >
         <TextView
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:gravity="right|center_vertical"
                android:text="发票类型:" />

            <RadioGroup
                android:id="@+id/invoice_group"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/btn_common"
                    style="@style/black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:button="@drawable/invoicecheckbox_selector"
                    
                    android:text="普通发票" />

                <RadioButton
                    android:id="@+id/btn_valueadd"
                    style="@style/black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:button="@drawable/invoicecheckbox_selector"
                    android:text="增值发票" />
            </RadioGroup>
    </LinearLayout>
    
         
         <LinearLayout 
             android:id="@+id/ll_common_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
               android:layout_marginRight="8dp"
               android:layout_marginLeft="8dp"
             >
                     <TextView
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="发票抬头:" />

            <EditText
                android:id="@+id/Invoice_title"
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:background="@drawable/white_big_cornor_bg"
                android:paddingLeft="3dp" />
         </LinearLayout>
 

    <TableLayout
        android:id="@+id/ll_valueadd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:shrinkColumns="0,1" >

        <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <TextView
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="单位名称:" />

            <EditText
                android:id="@+id/company_name"
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:background="@drawable/white_big_cornor_bg"
                android:paddingLeft="3dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <TextView
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="纳税人识别号:" />

            <EditText
                android:id="@+id/taxNo"
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                  android:layout_weight="2"
                android:background="@drawable/white_big_cornor_bg"
                android:paddingLeft="3dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <TextView
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="注册地址:" />

            <EditText
                android:id="@+id/adress"
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                android:background="@drawable/white_big_cornor_bg"
                android:paddingLeft="3dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <TextView
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="固定电话:" />

            <EditText
                android:id="@+id/phone"
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                 android:layout_weight="2"
                android:background="@drawable/white_big_cornor_bg"
                android:paddingLeft="3dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <TextView
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="开户银行:" />

            <EditText
                android:id="@+id/bank"
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                  android:layout_weight="2"
                android:background="@drawable/white_big_cornor_bg"
                android:paddingLeft="3dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <TextView
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="银行账号:" />

            <EditText
                android:id="@+id/bank_no"
                style="@style/button_text"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                  android:layout_weight="2"
                android:background="@drawable/white_big_cornor_bg"
                android:paddingLeft="3dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_commint_invoice"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="35dp"
            android:background="@drawable/red_btn_click"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>