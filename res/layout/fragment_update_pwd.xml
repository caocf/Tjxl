<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="请设置新密码："
        android:padding="10dp"
        android:textSize="@dimen/common_lage_text_size"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_layout_height"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical|right"
            android:text="输入旧密码："
            android:textColor="@color/black"
            android:textSize="@dimen/common_big_text_size" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@drawable/shape_yuanjiao_et_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/et_old_pwd"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:password="true"
                android:maxLength="16"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/common_big_text_size" />
            <ImageView
                android:id="@+id/btn_change_old_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ycsrk"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_layout_height"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical|right"
            android:text="输入新密码："
            android:textColor="@color/black"
            android:textSize="@dimen/common_big_text_size" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@drawable/shape_yuanjiao_et_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/et_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:password="true"
                android:maxLength="16"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/common_big_text_size" />
            <ImageView
                android:id="@+id/btn_change_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ycsrk"/>
            </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_layout_height"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical|right"
            android:text="确认新密码："
            android:textColor="@color/black"
            android:textSize="@dimen/common_big_text_size" />

        <EditText
            android:id="@+id/et_confirm_pwd"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:maxLength="16"
            android:background="@drawable/shape_yuanjiao_et_bg"
            android:password="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/common_big_text_size" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@color/gray"
        android:lineSpacingMultiplier="1.3"
        android:textSize="@dimen/common_small_text_size"
        android:text="温馨提示：\n1.为保证您的安全，新密码必须与旧密码不同。\n2.密码由6-16位字符(字母、数字、符号)组合而成，不能只使用一种字符，区分大小写。"/>
    
        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="120dp"
            android:layout_height="@dimen/common_layout_height"
            android:background="@drawable/common_btn_red_selector"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/common_big_text_size" />

</LinearLayout>
