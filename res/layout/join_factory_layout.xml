<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBECEC"
    android:orientation="vertical">

    <com.eims.tjxl_andorid.weght.HeadView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#E5E5E5"
        android:weightSum="4">

        <TextView
            android:id="@+id/btn_qyjs"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_white_red"
            android:gravity="center"
            android:text="企业介绍"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_big_text_size" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="fill_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/btn_gsxx"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/gary_bg_btn"
            android:gravity="center"
            android:text="工商信息"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_big_text_size" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="fill_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/btn_rytp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/gary_bg_btn"
            android:gravity="center"
            android:text="荣誉图片"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_big_text_size" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="fill_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/btn_lxwm"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/gary_bg_btn"
            android:gravity="center"
            android:text="联系我们"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_big_text_size" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <!--企业介绍-->
            <TextView
                android:id="@+id/tv_qyjs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" />

            <!--工商信息-->
            <LinearLayout
                android:id="@+id/layout_gsxx"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="公司名称"
                    android:textSize="@dimen/common_big_text_size" />

                <TextView
                    android:id="@+id/tv_adress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="注册地址"
                    android:textSize="@dimen/common_big_text_size" />

                <TextView
                    android:id="@+id/tv_license_code"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="工商注册号"
                    android:textSize="@dimen/common_big_text_size" />

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="厂家成立时间"
                    android:textSize="@dimen/common_big_text_size" />

                <TextView
                    android:id="@+id/tv_representative"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="法定代表人"
                    android:textSize="@dimen/common_big_text_size" />
            </LinearLayout>

            <!--荣誉图片-->
            <com.eims.tjxl_andorid.weght.MyGridView
                android:id="@+id/gv_imgs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:verticalSpacing="10dp"
                android:visibility="gone" />


            <!--联系我们-->
            <LinearLayout
                android:id="@+id/layout_contact"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tv_company2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="公司名称"
                    android:textSize="@dimen/common_big_text_size" />

                <TextView
                    android:id="@+id/tv_contact_person"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="联系人"
                    android:textSize="@dimen/common_big_text_size" />

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="座机号码"
                    android:textSize="@dimen/common_big_text_size" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="手机号码"
                    android:textSize="@dimen/common_big_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="150dp"

                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/iv_right1"
                                    android:layout_width="0dp"
                                    android:layout_height="80dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                     />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_right2"
                                    android:layout_width="0dp"
                                    android:layout_height="80dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                     />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_big_right"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_big_left"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/iv_left1"
                                    android:layout_width="0dp"
                                    android:layout_height="80dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_left2"
                                    android:layout_width="0dp"
                                    android:layout_height="80dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
