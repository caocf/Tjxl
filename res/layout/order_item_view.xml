<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/person_click"
    android:descendantFocusability="blocksDescendants"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView 
            android:id="@+id/order_item_shoename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shop、 name"
            style="@style/black_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            />
        
         <TextView 
            android:id="@+id/order_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:textColor="@color/sheng_red"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
         <View 
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="@color/line"
             android:layout_toLeftOf="@id/order_item_status"
             android:layout_marginTop="2dp"
             android:layout_marginBottom="2dp"
             />
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        >
        
          <RelativeLayout 
              android:id="@+id/rl_iamge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        >
        
        <ImageView 
            android:id="@+id/order_shoeImages"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/xytj"
            android:scaleType="fitCenter"
            
            android:background="@drawable/djsl"
            />
           <ImageView 
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
       
            android:scaleType="fitCenter"
            android:background="@drawable/djsl"
            />
           <TextView 
               android:id="@+id/order_item_numner"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="3双"
               android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
              android:layout_marginTop="58dp"
               />
           
           </RelativeLayout>
           
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_toRightOf="@id/rl_iamge"
              android:layout_marginLeft="10dp"
              >
              <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="8dp"
              >
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="订单编号："
                  style="@style/gray_text"
                  />
                   <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                   android:id="@+id/order_item_no"
                  style="@style/black_text"
                  android:layout_marginLeft="5dp"
                  />
              </LinearLayout>
                 <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="8dp"
              >
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="订单金额："
                  style="@style/gray_text"
                  />
                   <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/order_item_money"
                  style="@style/black_text"
                  android:layout_marginLeft="5dp"
                  />
              </LinearLayout>
                 <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="8dp"
              >
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="下单时间："
                  style="@style/gray_text"
                  />
                   <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/order_item_addtime"
                  style="@style/black_text"
                  android:layout_marginLeft="5dp"
                  />
              </LinearLayout>
              
                 
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="20dp"
              android:layout_marginRight="8dp"
              android:layout_marginBottom="10dp"
              >
              <Button 
                  android:id="@+id/order_cancel"
                  android:layout_width="0dp"
                  android:layout_weight="1" 
                  android:layout_height="35dp"
                  android:text="取消订单"
                  style="@style/button_text"
                  android:visibility="gone"
                  android:background="@drawable/comm_broder_line"
                  />
               <Button 
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/order_gopay"
                  android:layout_height="35dp" 
                  android:text="去付款"
                  android:background="@drawable/red_btn_click"
                  android:textColor="@color/white"
                  android:textSize="14sp"
                  android:visibility="gone"
                  android:layout_marginLeft="8dp"
                  />
               
                <Button 
                  android:id="@+id/order_showwuliu"
                  android:layout_width="0dp"
                  android:layout_weight="1" 
                  android:layout_height="35dp"
                  android:text="查看物流"
                  style="@style/button_text"
                   android:visibility="gone"
                  android:background="@drawable/comm_broder_line"
                  />
               <Button 
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/order_shouhuo"
                  android:layout_height="35dp" 
                  android:text="确认收货"
                  android:background="@drawable/red_btn_click"
                  android:textColor="@color/white"
                  android:textSize="14sp"
                  android:layout_marginLeft="8dp"
                  android:visibility="gone"
                  />
               
                    <Button 
                  android:id="@+id/order_shouhou"
                  android:layout_width="0dp"
                  android:layout_weight="1" 
                  android:layout_height="35dp"
                  android:text="申请售后"
                  style="@style/button_text"
                  android:visibility="gone"
                  android:background="@drawable/comm_broder_line"
                  />
               <Button 
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/order_gocomment"
                  android:layout_height="35dp" 
                  android:text="去评价"
                  android:background="@drawable/red_btn_click"
                  android:textColor="@color/white"
                  android:textSize="14sp"
                  android:visibility="gone"
                  android:layout_marginLeft="8dp"
                  />
         
              </LinearLayout> 
          </LinearLayout>
        
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/order_background"
        />
    

</LinearLayout>
